<h1>Listing contacts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Summary</th>
    <th>Url</th>
    <th>Address</th>
    <th>Phone</th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%=h contact.title %></td>
    <td><%=h contact.summary %></td>
    <td><%=h contact.url %></td>
    <td><%=h contact.address %></td>
    <td><%=h contact.phone %></td>
                              <!-- id = contact.key.getName -->
                              <% id = '2001' %>
    <td><%= link_to 'Show', @params.controller + "/#{id}" %></td>
    <td><%= link_to 'Edit', @params.controller + "/#{id}/edit" %></td>
    <td><%= link_to 'Destroy', "contact_confirm_delete" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New contact', @params.controller + "/new" %>
